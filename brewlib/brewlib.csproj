<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <RootNamespace>brewlib</RootNamespace>
    <AssemblyName>BrewLib</AssemblyName>
    <TargetFramework>net481</TargetFramework>
    <Copyright>Copyright © Damnae 2016</Copyright>
    <UseWindowsForms>true</UseWindowsForms>
    <Product>brewlib</Product>
    <Title>brewlib</Title>
    <Version>1.1</Version>
    <Company>storybrew</Company>
    <Platforms>AnyCPU;x86</Platforms>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>embedded</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DebugType>embedded</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|x86'">
    <DebugType>embedded</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x86'">
    <DebugType>embedded</DebugType>
    <Optimize>true</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="oxipng.exe" />
    <EmbeddedResource Include="pngquant.exe" />
    <EmbeddedResource Include="truepng.exe" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Damnae.Tiny" Version="1.1.0" />
    <PackageReference Include="OpenTK" Version="3.3.3" />
    <PackageReference Include="ManagedBass" Version="3.1.1" />
    <PackageReference Include="ManagedBass.Fx" Version="3.1.1" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Management" />
	<Reference Include="System.Web" />
  </ItemGroup>

</Project>